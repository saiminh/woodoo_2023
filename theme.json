{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"postTypes": [
				"page",
				"post"
			],
			"title": "Blank"
		},
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
        {
          "color": "#F6F4EC",
          "name": "Sycamore Off-White",
          "slug": "offwhite"
        },
				{
					"color": "#0B0B0B",
					"name": "Yakisugi Black",
					"slug": "contrast"
				},
				{
					"color": "#FA5A01",
					"name": "Marker Orange",
					"slug": "orange"
				},
				{
					"color": "#E4FF3E",
					"name": "Marker Yellow",
					"slug": "yellow"
				},
				{
					"color": "#2BC2EA",
					"name": "Marker Blue",
					"slug": "blue"
				}
			]
		},
		"layout": {
			"contentSize": "100%",
			"wideSize": "calc(100% - 2 * var(--wp--preset--spacing--outer, 15px) )"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
        {
          "size": "clamp(10px, 1.4vw, 30px)",
          "slug": "s",
          "name": "0.25"
        },
        {
          "size": "clamp(20px, 2.778vw, 60px)",
          "slug": "outer",
          "name": "0.5 (outer)"
        },
				{
					"size": "clamp(1.5rem, 5vw, 2rem)",
					"slug": "30",
					"name": "1"
				},
				{
					"size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
					"slug": "40",
					"name": "2"
				},
				{
					"size": "clamp(2.5rem, 8vw, 4.5rem)",
					"slug": "50",
					"name": "3"
				},
				{
					"size": "clamp(3.75rem, 10vw, 7rem)",
					"slug": "60",
					"name": "4"
				},
				{
					"size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
					"slug": "70",
					"name": "5"
				},
				{
					"size": "clamp(7rem, 14vw, 11rem)",
					"slug": "80",
					"name": "6"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Everett",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/TWKEverett-Light-web.woff2"
							]
						},
						{
							"fontFamily": "Everett",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/TWKEverett-Regular-web.woff2"
							]
						},
						{
							"fontFamily": "Everett",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": [
                "file:./assets/fonts/TWKEverett-Medium-web.woff2"
							]
						}
            ,
            {
              "fontFamily": "Everett",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": [
                "file:./assets/fonts/TWKEverett-Bold-web.woff2"
              ]
            }
					],
					"fontFamily": "\"Everett\", sans-serif",
					"name": "Everett",
					"slug": "everett"
				}
			],
      "fontSizes": [
        {
          "size": "clamp(12px, 0.833vw, 24px)",
          "slug": "12"
        },
        {
          "size": "clamp(14px, 0.972vw, 28px)",
          "slug": "14"
        },
        {
          "size": "clamp(16px, 1.111vw, 32px)",
          "slug": "16"
        },
        {
          "size": "clamp(18px, 1.387vw, 40px)",
          "slug": "20"
        },
        {
          "size": "clamp(20px, 1.736vw, 50px)",
          "slug": "25"
        },
        {
          "size": "clamp(22px, 2.083vw, 60px)",
          "slug": "30"
        },
        {
          "size": "clamp(24px, 2.777vw, 80px)",
          "slug": "40"
        },
        {
          "size": "clamp(26px, 3.125vw, 90px)",
          "slug": "45"
        },
        {
          "size": "clamp(28px, 3.472vw, 100px)",
          "slug": "50"
        },
        {
          "size": "clamp(30px, 4.513vw, 130px)",
          "slug": "65"
        },
        {
          "size": "clamp(32px, 6.25vw, 180px)",
          "slug": "90"
        },
        {
          "size": "clamp(34px, 7.291vw, 210px)",
          "slug": "105"
        }
      ]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/navigation": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "none"
							},
              "color": {
                "text": "var(--wp--preset--color--orange)"
              }
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)"
				}
			},
			"core/post-content": {
        "typography": {
          "fontWeight": "300",
          "lineHeight": "1.2"
        },
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--orange)"
						}
					}
				}
			},
			"core/post-excerpt": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--16)"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)",
					"fontWeight": "300"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)"
				}
			},
			"core/post-title": {
				"spacing": {
					"margin": {
						"bottom": "1.25rem",
						"top": "1.25rem"
					}
				},
				"typography": {
					"fontWeight": "300"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--orange)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/comments-title":{
				"typography": {
					"fontSize": "var(--wp--preset--font-size--20)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/comment-author-name": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--orange)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)"
				},
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--orange)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)"
				}
			},
			"core/comments-pagination": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--40)"
					}
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/pullquote": {
				"border": {
					"style": "solid",
					"width": "1px 0"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--14)",
							"fontStyle": "normal",
							"textTransform": "none"
						}
					}
				},
				"typography": {
					"lineHeight": "1.3"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40) !important",
						"top": "var(--wp--preset--spacing--40) !important"
					}
				}
			},
			"core/query": {
				"elements": {
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--25)"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--14)",
					"fontWeight": "300"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/quote": {
				"border": {
					"width": "1px"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--14)",
							"fontStyle": "normal"
						}
					}
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)"
					}
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--orange)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--16)",
					"fontWeight": "normal",
					"lineHeight": "1.4"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
        "spacing": {
          "padding": {
            "top": "1.5em",
            "right": "3em",
            "bottom": "1.5em",
            "left": "3em"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--12)",
          "fontWeight": "300",
          "textTransform": "uppercase"
        },
				"border": {
					"radius": "3em"
				},
				"color": {
					"background": "var(--wp--preset--color--contrast)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
          "color": {
            "background": "var(--wp--preset--color--contrast)",
            "text": "var(--wp--preset--color--orange)"
          }
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--contrast)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--orange)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--50)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--40)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--30)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--25)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--20)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--16)"
				}
			},
			"heading": {
        "typography": {
          "textTransform": "uppercase",
					"fontWeight": "300",
					"lineHeight": "1.1",
          "letterSpacing": "-0.02em"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline dashed"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--orange)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"spacing": {
			"blockGap": "1rem",
			"padding": {
				"top": "var(--wp--preset--spacing--0)",
				"right": "var(--wp--preset--spacing--0)",
				"bottom": "var(--wp--preset--spacing--0)",
				"left": "var(--wp--preset--spacing--0)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--everett)",
			"fontSize": "var(--wp--preset--font-size--16)",
			"lineHeight": "1.6"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "comments",
			"title": "Comments"
		},
		{
			"area": "uncategorized",
			"name": "post-meta",
			"title": "Post Meta"
		}
	]
}
